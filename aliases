# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="bin/rspec"
alias rc="bin/rails console"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# msmtp-queue wrapper
alias msmtp-queue="/usr/local/share/msmtp/scripts/msmtpq/msmtpq --q-mgmt"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
